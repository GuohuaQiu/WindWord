<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    > 

<ImageView 
    android:id="@+id/icon_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    />
<TextView   
    android:id="@+id/text_item"
    android:textStyle="bold"   
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    /> 
    
     <EditText android:layout_height="wrap_content"  
         android:layout_width="fill_parent" android:layout_marginLeft="20dip"  
         android:layout_marginRight="20dip" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/edtInput"/>

 <Button android:id="@+id/btn_cancel" android:layout_below="@id/text_item"
 android:layout_width="wrap_content" android:layout_height="wrap_content"
 android:layout_centerHorizontal="true" android:text="Cancel" />    

</LinearLayout>
