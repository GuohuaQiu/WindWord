<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b0000000"
    android:visibility="invisible">

    <ImageView
        android:id="@+id/open_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/folder_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip">
        <!--
            We need to specify a transparent background for the
            PaneView. Otherwise the fading edge and the scrollbar won't
            be drawn by the View class.
       
        <com.sonyericsson.paneview.PaneView
            android:id="@+id/folder_pane_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#0000"
            android:fadingEdge="vertical"
            android:scrollbars="vertical"
            android:layout_marginTop="@dimen/folder_top_margin"
            android:layout_marginBottom="@dimen/folder_bottom_margin"
            android:layout_marginLeft="@dimen/folder_left_margin"
            android:layout_marginRight="@dimen/folder_right_margin" />
 -->
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/general_list_divider_small"
            android:layout_marginTop="@dimen/folder_top_margin"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip" />

        <LinearLayout
            android:id="@+id/label_click_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="19dip"
            android:layout_marginTop="6dip"
            android:layout_marginLeft="9dip"
            android:layout_marginRight="9dip">
            <TextView
                android:id="@+id/label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/folder_popup_header"
                android:clickable="true"
                android:textSize="16dip"
                android:textColor="#FFF"
                android:singleLine="true"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingBottom="0dip"
                android:textStyle="bold"
                android:ellipsize="marquee" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/folder_bg_left"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="@drawable/home_folder_popup_left" />
            <ImageView
                android:id="@+id/folder_bg_middle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:background="@drawable/home_folder_popup_down" />
            <ImageView
                android:id="@+id/folder_bg_right"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/home_folder_popup_right" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
